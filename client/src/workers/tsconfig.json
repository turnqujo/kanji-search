{
  "extends": "../../tsconfig.json",
  "include": ["./*.worker.ts", "./utility-scripts/*.ts", "workerTypes.d.ts"],
  "exclude": ["./__tests__/*"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["webworker", "es2019"],
    "module": "None",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": false,
    "outDir": "../../public/workers",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES6"
  }
}
